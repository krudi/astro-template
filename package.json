{
  "name": "astro-template",
  "description": "A template with Astro with focus on performance and best practices.",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/krudi/astro-template/LICENSE"
    }
  ],
  "version": "0.1.0",
  "authors": [
    {
      "name": "authors",
      "email": "example@mail.com",
      "url": "https://github.com/krudi/astro-template"
    }
  ],
  "private": false,
  "homepage": "https://github.com/krudi/astro-template#readme",
  "bugs": {
    "url": "https://github.com/krudi/astro-template/issues"
  },
  "keywords": [
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/krudi/astro-template.git"
  },
  "funding": [
    {
      "type": "individual",
      "url": "http://example.com/donate"
    }
  ],
  "engines": {
    "node": ">= 18.17.1"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint:js": "eslint --ext .js,.ts,.astro .",
    "lint:js:fix": "eslint --fix --ext .js,.ts,.astro .",
    "lint:css": "stylelint **/*.{css,scss}",
    "lint:css:fix": "stylelint --fix **/*.{css,scss}",
    "lint:files": "prettier --check \"**/*.{html,graphql,yml,yaml,astro}\"",
    "lint:files:fix": "prettier --write \"**/*.{html,graphql,yml,yaml,astro}\"",
    "lint:full": "npm run lint:js && npm run lint:css && npm run lint:files",
    "lint:full:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:files:fix",
    "prepare": "husky install"
  },
  "type": "module",
  "dependencies": {
    "@astrojs/check": "^0.3.0",
    "@astrojs/node": "^6.0.3",
    "@astrojs/sitemap": "^3.0.2",
    "astro": "^3.4.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  }
}
